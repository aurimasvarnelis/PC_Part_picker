@model PC_Part_picker.ViewModels.PartViewModel

<p>
    <a asp-action="CreateMotherboard">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Motherboard.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motherboard.First().Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motherboard.First().Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motherboard.First().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motherboard.First().Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motherboard.First().Color)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Motherboard)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacturer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    <a asp-action="EditMotherboard" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="DetailsMotherboard" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="DeleteMotherboard" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
