@model PC_Part_picker.ViewModels.PartViewModel

<p>
    <a asp-action="_CreateGPU">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GPU.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPU.First().Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPU.First().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPU.First().Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPU.First().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPU.First().Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPU.First().Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPU.First().Memory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPU.First().Frequency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPU.First().MemoryType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GPU.First().Consumption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GPU)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacturer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Memory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Frequency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemoryType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Consumption)
                </td>
                <td>
                    <a asp-action="_EditGPU" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="_DetailsGPU" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="_DeleteGPU" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
